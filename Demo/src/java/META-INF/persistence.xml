<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="dickenPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.demo.access.CandidateAccess</class>
        <class>com.demo.election.DOIRun</class>
        <class>com.demo.election.DOSRun</class>
        <class>com.demo.election.DOSpRun</class>
        <class>com.demo.election.DOWRun</class>
        <class>com.demo.election.FSRun</class>
        <class>com.demo.election.PresidentRun</class>
        <class>com.demo.election.SGRun</class>
        <class>com.demo.election.VPRun</class>
        <class>com.demo.users.Candidate</class>
        <class>com.demo.users.ElecoAdmin</class>
        <class>com.demo.users.Student</class>
        <class>com.demo.utils.UploadImages</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/votingapp"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>
